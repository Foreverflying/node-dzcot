  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Launch Program",
      "initCommands": [
        "settings set target.disable-aslr false"
      ],
      "preLaunchTask": "npm: build:dev",
      "program": "/usr/bin/node",
      "cwd": "${workspaceFolder}",
      "args": [
        "src/index.js"
      ]
    }
  ]
